@model DungeonHub.ViewModels.SessionFormViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create a Sesson</h2>
@using (Html.BeginForm("Create", "Sessions"))
{
    <p class="alert alert-info">All fields are <b>required</b>.</p>
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Location)
        @Html.TextBoxFor(m => m.Location, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.Location)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control", placeholder = "eg 1 Jan 2020" })
        @Html.ValidationMessageFor(m => m.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control", placeholder = "20:00" })
        @Html.ValidationMessageFor(m => m.Time)


    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GameSystem)
        @Html.DropDownListFor(m => m.GameSystem, new SelectList(Model.GameSystems, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.GameSystem)


    </div>
    <button type="submit" class="btn btn-primary">Save</button>

}
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
